<% if(locals.user){ %>
<div id="home-container" class="container-fluid">
    <div class="empty">
        <div class="inner card ml-3">
            <div class="cover-picture">
                <!-- will add a cover picure upload functionality -->
            </div>

            <a href="/users/profile/<%= locals.user.id %>" class="locals-user-link">
                <div class="user-pic">
                    <% if(locals.user.avatar){ %>
                    <img class="rounded-circle mx-5" width="70" src="<%= locals.user.avatar %>" alt="">
                    <% } else{ %>
                    <img class="rounded-circle mx-5" width="60" src="<%= assetPath('images/no_profile.jpg') %>" alt="">
                    <% } %>
                </div>

                <div class="card-body text-capitalize">
                    <h5 class="card-title text-center"><%= locals.user.name %></h5>
                </div>
            </a>

            <div class="text-muted small friendlist">
                <span>
                    friendlist
                </span>
                <span class="length">
                    <%= locals.user.friendships.length %>
                </span>
            </div>

            <div class="text-muted small friendlist">
                <span>
                    email
                </span>
                <span class="length">
                    <%= locals.user.email%>
                </span>
            </div>
        </div>


    </div>


    <div class="row posts">
        <div class="mx-3 posts-size">
            <!-- - \\\\\\\Post-->

            <form action="/posts/create" id="new-post-form" method="POST">
                <div class="card">
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs">
                            <li class="nav-item">
                                <a class="nav-link active">
                                    Make a publication
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <textarea class="form-control" name="content" cols="55" rows="3"
                                placeholder="Whats on your mind.. Type Here !!" required></textarea>
                        </div>
                        <div class="btn-toolbar justify-content-between">
                            <div class="btn-group">
                                <button type="submit" class="btn btn-primary">share</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

            <!-- Post ///// -->
            <div id="post-list-container">

                <% for(post of posts){ %>

                <%- include('posts') %>

                <% } %>


            </div>
        </div>
    </div>


    <section id="user-friends">
        <!-- changinf this &********************** -->

        <div class="inner">
            <div class="friends list-group">
                <h4>FRIENDS</h4>

                <div class="box-size">
                    <% for(let friends of friendships){ %>

                    <p class="list-group-item">
                        <% if(friends.avatar){ %>
                        <img class="rounded-circle" width="45" src="<%= friends.avatar %>" alt="">
                        <% } else{ %>
                        <img class="rounded-circle" width="45" src="<%= assetPath('images/no_profile.jpg') %>" alt="">
                        <% } %>
                        <a class="ml-2" href="/users/profile/<%= friends.id %>"> <%= friends.name %> </a>
                    </p>

                    <% } %>
                </div>


            </div>

            <div class="users list-group">
                <h4>ALL USERS</h4>

                <div class="box-size">
                    <% for(u of all_users){%>
                    <p class="list-group-item">
                        <% if(u.avatar){ %>
                        <img class="rounded-circle" width="45" src="<%= u.avatar %>" alt="">
                        <% } else{ %>
                        <img class="rounded-circle" width="45" src="<%= assetPath('images/no_profile.jpg') %>" alt="">
                        <% } %>
                        <a class="ml-2" href="/users/profile/<%= u.id %>"> <%= u.name %></a>
                    </p>
                    <% } %>
                </div>

            </div>
        </div>


    </section>

</div>


<% }else{ %>


<div class="welcome">

    <img class="img-fluid" src="<%= assetPath('images/welcome.svg') %>" alt="">

    <div class="welcome_text">
        <span>WELCOME TO</span>
         SOCIAL GARG !
        <div class="underline">
            (-By SAGAR GARG)
        </div>
    </div>


</div>



<% } %>



